                <div class="detail-value">{{ baguette.taille ? baguette.taille ~ ' cm' : '-' }}</div>
            </div>
            <div class="detail-item">
                <div class="detail-label">Nombre de propri√©taires</div>
                <div class="detail-value">{{ baguette.eleves|length }}</div>
