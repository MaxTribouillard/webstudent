                        </tr>
                    </thead>
                    <tbody>
                    {% for note in notes %}
                        <tr>
                            <td>{{ note.id }}</td>
                            <td>
                                {% if note.eleve %}
                                    <a href="{{ path('app_eleve_show', {'id': note.eleve.id}) }}" class="entity-link">
                                        {{ note.eleve.prenom }} {{ note.eleve.nom }}
                                    </a>
                                {% else %}
                                    <span style="color: #9ca3af;">Aucun</span>
                                {% endif %}
