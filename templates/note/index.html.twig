                                {% if note.matiere %}
                                    <a href="{{ path('app_matiere_show', {'id': note.matiere.id}) }}" class="entity-link">
                                        {{ note.matiere.libelle }}
                                    </a>
                                {% else %}
                                    <span style="color: #9ca3af;">Aucune</span>
                                {% endif %}
                            </td>
                            <td><strong>{{ note.note }}</strong></td>
                            <td>{{ note.date ? note.date|date('d/m/Y') : '-' }}</td>
