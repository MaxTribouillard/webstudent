                <a href="{{ path('app_note_new') }}" class="btn btn-primary">
                    ‚ûï Nouvelle Note
                </a>
            </div>
        </div>

        {% if notes|length > 0 %}
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
