                    {% if eleve.baguette %}
                        <a href="{{ path('app_baguette_show', {'id': eleve.baguette.id}) }}" class="entity-link">
                            {{ eleve.baguette.nom }} - {{ eleve.baguette.taille }}cm
                        </a>
                    {% else %}
                        <span style="color: #9ca3af;">Aucune baguette</span>
                    {% endif %}
